<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Member-Mapper">
	<sql id="search">
		<if test="searchType == 'i'.toString()">
			and id like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'p'.toString()">
			and phone like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'e'.toString()">
			and email like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'n'.toString()">
			and name like '%'||#{keyword}||'%'
		</if>
	</sql>

	<select id="selectMemberList" resultType="member">
		select
		*
		from
		member
	</select>

	<select id="selectMemberById" resultType="member">  <!-- parameterType="str" -->
		select
		*
		from member
		where mem_id=#{memId}
	</select>

	<update id="updateLoginDate">
		UPDATE member
		SET
		mem_logindate =
		sysdate
		WHERE
		mem_id
		=#{memId}
	</update>

	<update id="insertMemberD" parameterType="doctor">
		INSERT INTO member (
		mem_id
		,mem_pwd
		,mem_name
		,mem_regnum
		,mem_email
		,mem_tel
		,mem_addr
		,mem_addr2
		,mem_zipcode
		,mem_authority
		) VALUES (
		#{memId}
		,#{memPwd}
		,#{memName}
		,#{memRegnum}
		,#{memEmail}
		,#{memTel}
		,#{memAddr}
		,#{memAddr2}
		,#{memZipcode}
		,#{memAuthority}
		)
	</update>
	<update id="insertDoctor">
		INSERT INTO doctor (
		doctor_code
		,mem_id
		,hospital_code
		,hospital_name
		) VALUES (
		#{doctorNum}
		,#{memId}
		,#{hospitalCode}
		,#{hospitalName}
		)
	</update>

	<update id="insertMemberC" parameterType="chemist">
		INSERT INTO member (
		mem_id
		,mem_pwd
		,mem_name
		,mem_regnum
		,mem_email
		,mem_tel
		,mem_addr
		,mem_addr2
		,mem_zipcode
		,mem_authority
		) VALUES (
		#{memId}
		,#{memPwd}
		,#{memName}
		,#{memRegnum}
		,#{memEmail}
		,#{memTel}
		,#{memAddr}
		,#{memAddr2}
		,#{memZipcode}
		,#{memAuthority}
		)
	</update>
	<update id="insertChemist">
		INSERT INTO chemist (
		chemist_code
		,mem_id
		,pharmacy_code
		,pharmacy_name
		) VALUES (
		#{chemistCode}
		,#{memId}
		,#{pharmacyCode}
		,#{pharmacyName}
		)
	</update>

	<update id="insertMember" parameterType="member">
		INSERT INTO member (
		mem_id
		,mem_pwd
		,mem_name
		,mem_regnum
		,mem_email
		,mem_tel
		,mem_addr
		,mem_addr2
		,mem_zipcode
		,mem_authority
		) VALUES (
		#{memId}
		,#{memPwd}
		,#{memName}
		,#{memRegnum}
		,#{memEmail}
		,#{memTel}
		,#{memAddr}
		,#{memAddr2}
		,#{memZipcode}
		,#{memAuthority}
		)
	</update>

	<select id="selectSameId" resultType="int">
		select count(*)
		from
		member
		where MEM_ID=#{memId}

	</select>

	<select id="isPatient" resultType="int">
		SELECT
		count(*)
		FROM
		patient
		where patient_regnum = #{memRegnum}
	</select>

	<update id="updateMemId" parameterType="member">
		UPDATE patient
		SET
		mem_id =
		#{memId},
		patient_phone = #{memTel},
		patient_addr = #{memAddr}
		WHERE
		patient_regnum =#{memRegnum}
	</update>

	<update id="insertPatient" parameterType="patient">
		INSERT INTO patient (
		patient_code
		,mem_id
		,patient_name
		,patient_regnum
		,patient_phone
		,patient_addr
		) VALUES (
		#{patientCode}
		,#{memId}
		,#{patientName}
		,#{patientRegnum}
		,#{patientPhone}
		,#{patientAddr}
		)
	</update>


	<!-- 아이디 찾기 -->
	<select id="foundId" resultType="String">
		SELECT
		mem_id
		FROM
		member
		where
		mem_tel = #{memTel}
		and mem_name = #{memName}
	</select>

	<!-- 비밀번호 찾기 -->

	<!-- 비밀번호 변경 -->
	<update id="updatePwd" parameterType="member">
		UPDATE member
		SET
		mem_pwd = #{memPwd}
		WHERE
		mem_id =#{memId}
	</update>

	<!-- 헤지 : 약사가 환자 등록 -->
	<update id="insertMemberForPharmacist" parameterType="member">
		insert into member (
		    mem_id
		   ,mem_pwd
		   ,mem_name
		   ,mem_regnum
		   ,mem_tel
		   ,mem_addr
		   ,mem_email
		   ,mem_authority
		   ,mem_enabled
		   ,mem_zipcode
		   ,mem_regdate
		) values (
		    #{memId}
		   ,#{memPwd}
		   ,#{memName}
		   ,#{memRegnum}
		   ,#{memTel}
		   ,'-'
		   ,'-'
		   ,'일반'
		   ,1
		   ,'-'
		   ,sysdate
		)
	</update>

	<!-- 아이디로 의사테이블 정보 가져오기 -->
	<select id="selectDoctorInfo" resultType="doctor">
		select a.*,b.*
		from member a, doctor b
		where a.mem_id= #{memId}
		and a.mem_id = b.mem_id
	</select>

	<!-- 아이디로 약사테이블 정보 가져오기 -->
	<select id="selectChemistInfo" resultType="chemist">
		select a.*,b.*
		from member a, chemist b
		where a.mem_id= #{memId}
		and a.mem_id = b.mem_id
	</select>

	<!-- 아이디로 환자테이블 정보 가져오기 -->
	<select id="selectPatientInfo" resultType="member">
		select
		    a.mem_pwd,
		    a.mem_name,
		    a.mem_regnum,
		    a.mem_tel,
		    a.mem_addr,
		    a.mem_email,
		    a.mem_authority,
		    a.mem_enabled,
		    a.mem_logindate,
		    a.mem_zipcode,
		    a.mem_addr2,
		    a.mem_regdate ,b.*
		from member a, patient b
		where a.mem_id= #{memId}
		and a.mem_id = b.mem_id(+)
	</select>


</mapper>
